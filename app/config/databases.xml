<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/databases/1.1">
	
	<ae:configuration>
		<databases default="redis">
			
			<database name="redis" class="AgaviRedisDatabase">
				<ae:parameter name="host">localhost</ae:parameter>
				<ae:parameter name="port">6379</ae:parameter>
				<ae:parameter name="timeout">1</ae:parameter>
                <ae:parameter name="persistent">false</ae:parameter>
			</database>

            <database name="solr" class="AgaviSolrDatabase">
                <ae:parameter name="hostname">localhost</ae:parameter>
                <ae:parameter name="port">8983</ae:parameter>
                <ae:parameter name="path">solr</ae:parameter>
            </database>
			
		</databases>
	</ae:configuration>
	
