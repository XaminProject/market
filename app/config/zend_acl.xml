<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1"
	xmlns="http://xamin.ir/agavi/config/parts/zend_acl_definitions/1.1">

	<ae:configuration>
		<resources>
		  <resource name="welcome" />
		  <resource name="test">
			<resource name="res1" />
			<resource name="test1">
			  <resource name="res2" />
			</resource>
		  </resource>
		  <resource name="t1"/>
		  <resource name="t2"/>
		</resources>
		
		<roles>
		  <!-- null user means not logged in users. there is problem in agavi with not secure actions -->
		  <role name="null">
			<perms>
			  <perm type="allow" privieges="read">welcome</perm>
			</perms>
		  </role>
		  <role name="guest">
			<perms>
			  <perm type="allow" privileges="read,write">res1</perm>
			  <perm type="deny">t1</perm>
			</perms>
			<role name="admin">
			  <perms>
				<perm type="allow" privileges="read">res1</perm>
				<perm type="deny">t1</perm>
			  </perms>
			  <role name="dummy" />
			</role>
		  </role>
		</roles>
	</ae:configuration>
</ae:configurations>
