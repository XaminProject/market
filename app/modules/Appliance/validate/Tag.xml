<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.1"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1"
	parent="%core.module_dir%/Appliance/config/validators.xml"
>
	
	<ae:configuration>

		<validators>
            <validator class="regex" name="name">
                <argument>name</argument>
                <error>invalid tag name</error>
                <ae:parameter name="pattern">/^[a-zA-Z0-9-]+$/</ae:parameter>
                <ae:parameter name="match">1</ae:parameter>
            </validator>
		</validators>

	</ae:configuration>
	
</ae:configurations>