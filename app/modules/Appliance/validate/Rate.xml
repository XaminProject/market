<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.1"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1"
    parent="%core.module_dir%/Appliance/config/validators.xml"
>
    
    <ae:configuration>
        <validators>
            <validator name="rate" class="number">
                <argument>rate</argument>
                <ae:parameter name="min">1</ae:parameter>
                <ae:parameter name="max">5</ae:parameter>
                <ae:parameter name="cast_to">int</ae:parameter>
                <ae:parameter name="type">int</ae:parameter>
                <ae:parameter name="no_locale">true</ae:parameter>
            </validator>
            <validator name="name" class="string">
                <argument>name</argument>
            </validator>
        </validators>
    </ae:configuration>
    
</ae:configurations>